                    "endpoint",
                    "route",
                    "controller",
                    "service",
                    "model",
                    "middleware",
                    "validation",
                    "Zod",
                    "Drizzle",
                    "database"
                ],
                "intentPatterns": [
                    "(create|add|implement).*?(route|endpoint|API|service|model)",
                    "(fix|handle|debug).*?(error|exception|backend)",
                    "(how to|best practice).*?(API|route|service)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "src/app/api/**/*.ts",
                    "src/shared/services/**/*.ts",
                    "src/shared/models/**/*.ts"
                ],
                "pathExclusions": [
                    "**/*.test.ts"
                ]
