{
    "version": "1.0",
    "description": "BananaPrompts 项目的 Skill 自动激活规则",
    "skills": {
        "google-official-seo-guide": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Google 官方 SEO 指南，结构化数据，搜索优化",
            "promptTriggers": {
                "keywords": [
                    "SEO",
                    "搜索优化",
                    "结构化数据",
                    "schema",
                    "rich results",
                    "hreflang",
                    "sitemap",
                    "meta tags",
                    "canonical",
                    "robots.txt",
                    "indexing",
                    "crawling",
                    "Search Console",
                    "动态标题",
                    "专家点评",
                    "seoSlug"
                ],
                "intentPatterns": [
                    "(优化|improve|add).*?(SEO|搜索|search)",
                    "(create|generate|add).*?(structured data|schema|结构化)",
                    "(how to|best practice).*?(SEO|ranking|搜索排名)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/api/admin/seo/**",
                    "**/seo*.ts",
                    "**/sitemap*"
                ]
            }
        },
        "internationalizing-websites": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "Next.js 国际化，多语言支持",
            "promptTriggers": {
                "keywords": [
                    "i18n",
                    "国际化",
                    "多语言",
                    "localization",
                    "翻译",
                    "translation",
                    "hreflang",
                    "locale"
                ],
                "intentPatterns": [
                    "(add|implement).*?(language|语言|i18n)",
                    "(translate|翻译).*?"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "**/i18n/**",
                    "**/locales/**",
                    "**/[locale]/**"
                ]
            }
        },
        "skill-developer": {
            "type": "domain",
            "enforcement": "suggest",
