    "notes": {
        "enforcement_types": {
            "suggest": "建议使用，不阻止执行",
            "block": "必须使用 skill 才能继续",
            "warn": "显示警告但允许继续"
        },
        "priority_levels": {
            "critical": "最高 - 始终触发",
